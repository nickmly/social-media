<% include ../partials/header %>
<div class="ui container">
    <div class="ui segment">
        <h1>Edit Comment</h1>
        <form class="ui form" action="/post/<%= post._id %>/comment/<%= comment._id %>?_method=PUT" method="POST">            
            <div class="ui field">
                <input type="text" name="comment[text]" placeholder="Comment" value="<%= comment.text %>">
            </div>
            <div class="ui field">
                <button class="ui right labeled icon orange button">
                    <i class="send icon"></i>
                    Finish
                </button>
            </div>            
        </form>
    </div>
</div>

<% include ../partials/footer %>